#index-container {
  background-color: black;
  height: 100%;
}
.container {
  color: #fcfcfd;
  text-align: center;
  padding-top: 50%;
}
.title_h1 {
  font-size: 50rpx;
  font-weight: bold;
  flex-direction: column;
}
.title_h2 {
  font-size: 44rpx;
  color: #999999;
  padding: 100rpx 0;
}
.footer {
  position: fixed;
  left: 0rpx;
  bottom: 0rpx;
  width: 100%;
  height: 100rpx;
  background-color: #000;
}
.spinner {
  margin: 200rpx auto 0;
  width: 300rpx;
  text-align: center;
  height: 440rpx;
}
.spinner > view {
  width: 30rpx;
  height: 30rpx;
  background-color: #fcfcfd;
  border-radius: 100%;
  display: inline-block;
  animation: bouncedelay 2.6s infinite ease-in-out;
  /* Prevent first frame from flickering when animation starts */
  animation-fill-mode: both;
}
.spinner .bounce1 {
  animation-delay: -0.48s;
}
.spinner .bounce2 {
  animation-delay: -0.32s;
}
@keyframes bouncedelay {
0%, 80%, 100% {
    transform: scale(0);
    -webkit-transform: scale(0);
}
40% {
    transform: scale(1);
    -webkit-transform: scale(1);
}
}